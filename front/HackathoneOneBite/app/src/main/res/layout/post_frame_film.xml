<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:id="@+id/post_frame">

    <Space
        android:id="@+id/space"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="3.75:10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/black"/>

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="@+id/space"
        app:layout_constraintEnd_toEndOf="@id/space"
        app:layout_constraintTop_toTopOf="@+id/space"
        app:layout_constraintBottom_toBottomOf="@id/space"
        android:src="@drawable/img_film_background"/>

    <View
        android:id="@+id/emptyView1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.027"
        app:layout_constraintTop_toTopOf="@id/space"
        app:layout_constraintStart_toStartOf="@id/space"
        app:layout_constraintEnd_toEndOf="@id/space"/>

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/light_gray"
        app:layout_constraintHeight_percent="0.205"
        app:layout_constraintTop_toBottomOf="@id/emptyView1"
        app:layout_constraintStart_toStartOf="@id/space"
        app:layout_constraintEnd_toEndOf="@id/space"
        app:layout_constraintDimensionRatio="146:93"
        android:scaleType="centerCrop"/>

    <View
        android:id="@+id/emptyView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.009"
        app:layout_constraintTop_toBottomOf="@id/imageView1"
        app:layout_constraintStart_toStartOf="@id/space"
        app:layout_constraintEnd_toEndOf="@id/space"/>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/light_gray"
        app:layout_constraintHeight_percent="0.205"
        app:layout_constraintTop_toBottomOf="@id/emptyView2"
        app:layout_constraintStart_toStartOf="@id/space"
        app:layout_constraintEnd_toEndOf="@id/space"
        app:layout_constraintDimensionRatio="146:93"
        android:scaleType="centerCrop"/>

    <View
        android:id="@+id/emptyView3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.009"
        app:layout_constraintTop_toBottomOf="@id/imageView2"
        app:layout_constraintStart_toStartOf="@id/space"
        app:layout_constraintEnd_toEndOf="@id/space"/>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/light_gray"
        app:layout_constraintHeight_percent="0.205"
        app:layout_constraintTop_toBottomOf="@id/emptyView3"
        app:layout_constraintStart_toStartOf="@id/space"
        app:layout_constraintEnd_toEndOf="@id/space"
        app:layout_constraintDimensionRatio="146:93"
        android:scaleType="centerCrop"/>

    <View
        android:id="@+id/emptyView4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.009"
        app:layout_constraintTop_toBottomOf="@id/imageView3"
        app:layout_constraintStart_toStartOf="@id/space"
        app:layout_constraintEnd_toEndOf="@id/space"/>

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/light_gray"
        app:layout_constraintHeight_percent="0.205"
        app:layout_constraintTop_toBottomOf="@id/emptyView4"
        app:layout_constraintStart_toStartOf="@id/space"
        app:layout_constraintEnd_toEndOf="@id/space"
        app:layout_constraintDimensionRatio="146:93"
        android:scaleType="centerCrop"/>

    <View
        android:id="@+id/emptyView5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.027"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toStartOf="@id/imageView4"
        app:layout_constraintBottom_toBottomOf="@+id/space"/>

    <ImageView
        android:id="@+id/RELAYImageView"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.022"
        android:src="@drawable/img_logo_white"
        app:layout_constraintTop_toBottomOf="@id/imageView4"
        app:layout_constraintStart_toStartOf="@id/imageView4"
        app:layout_constraintEnd_toEndOf="@id/imageView4"
        app:layout_constraintBottom_toTopOf="@id/emptyView5"/>

    <TextView
        android:id="@+id/dateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="2023.02.04"
        android:textSize="14sp"
        android:textColor="#7a7a7a"
        app:layout_constraintStart_toStartOf="@+id/space"
        app:layout_constraintEnd_toEndOf="@id/space"
        app:layout_constraintTop_toBottomOf="@id/RELAYImageView"/>
</androidx.constraintlayout.widget.ConstraintLayout>